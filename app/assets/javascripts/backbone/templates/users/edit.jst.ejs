<div class="sub-container top-header green" style="max-width: 800px; text-align: center; display: block;">
  <div class="header-title most-characters">&#60;Add|Edit&#62; User</div>
</div>
<div class="form-wrapper">
  <p>ID: <%= id %></p>
  <form id="edit-user" name="user">
    <div class="field">
      <label for="name"> Name:</label>
      <input type="text" name="name" id="name" value="<%= name %>" >
    </div>

    <div class="field">
      <label for="points"> Points:</label>
      <input type="text" name="points" id="points" value="<%= points %>" >
    </div>
    
      <div class="field">
      <label for="side"> Side:</label>
      <select  name="side" id="side">
        <option value="<%= side %>"><%= side %></option>
        <option value="Rebellion">Rebellion</option>
        <option value="Empire">Empire</option>
        <option value="Independent">Independent</option>
      </select>
    </div>

    <div class="actions">
      <input type="submit" value="Update User" />
    </div>

  </form>
</div>
